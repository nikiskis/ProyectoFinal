<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context=".MainActivity">

    <View
        android:id="@+id/viewHeader"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="#00838F"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXUS POINT"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sistema Integral de Gestión de Comandas y Punto de Venta Móvil para Restaurantes basado en Arquitectura Android y Sincronización en la Nube"
        android:textColor="#E0F7FA"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="32dp"
            android:paddingHorizontal="24dp">

            <Button
                android:id="@+id/btnPedidos"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Pedidos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="#00A9BD"
                android:textColor="#FFFFFF"
                app:cornerRadius="8dp"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnCorteCaja"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Corte de Caja"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="#00A9BD"
                android:textColor="#FFFFFF"
                app:cornerRadius="8dp"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnEstadisticas"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Estadísticas"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="#00A9BD"
                android:textColor="#FFFFFF"
                app:cornerRadius="8dp"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnArticulos"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Administrar Artículos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="#00A9BD"
                android:textColor="#FFFFFF"
                app:cornerRadius="8dp"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnListaFaltantes"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Lista de Faltantes y\nProveedores"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="#00A9BD"
                android:textColor="#FFFFFF"
                app:cornerRadius="8dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>