<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ListaFaltantes">

    <LinearLayout
        android:id="@+id/headerFaltantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00838F"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt; Volver"
            android:backgroundTint="#BD0000"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lista de Compras / Faltantes"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/btnIrAProveedores"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Proveedores"
            app:tint="@color/white"
            android:layout_marginStart="8dp"/>


        <ImageButton
            android:id="@+id/btnPrintFaltantes"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/black"
            android:contentDescription="Imprimir Lista"
            app:tint="@color/white"/>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFaltantes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerFaltantes"
        app:layout_constraintBottom_toTopOf="@id/footerFaltantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <LinearLayout
        android:id="@+id/footerFaltantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#E0E0E0"
        app:layout_constraintBottom_toBottomOf="parent">


        <Button
            android:id="@+id/btnAgregarManual"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="+ Agregar Item Manual"
            android:backgroundTint="#1CBD00"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btnLimpiarLista"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Limpiar"
            android:backgroundTint="#F44336"
            android:layout_marginStart="8dp"
            android:textSize="14sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>