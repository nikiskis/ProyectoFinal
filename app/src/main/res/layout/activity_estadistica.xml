<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estadísticas de Venta"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etEstadisticaInicio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Inicio"
                android:textSize="14sp"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:drawableEnd="@android:drawable/ic_menu_my_calendar"/>

            <EditText
                android:id="@+id/etEstadisticaFin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Fin"
                android:textSize="14sp"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:layout_marginStart="8dp"
                android:drawableEnd="@android:drawable/ic_menu_my_calendar"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnFiltrarEstadistica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actualizar Gráficas"
            android:backgroundTint="#488079"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20 Productos Más Vendidos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp">

            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/chartProductos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ventas por Categoría"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp">

            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/chartCategorias"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ventas por Zona de Producción"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp">

            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/chartZonas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"/>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnDetalleEstadistica"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Ver Estadísticas Detalladas"
            android:backgroundTint="#673AB7"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnAnalisisAvanzado"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Ver Análisis Avanzado (Pareto/Heatmap)"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Regresar"
            android:backgroundTint="#BD0000"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>