<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Análisis detallado"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Qué quieres analizar?"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgTipoReporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbPorCategoria"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Por categoría"
                android:gravity="center"
                android:background="@drawable/radio_selector_background"
                android:button="@null"
                android:textColor="@color/radio_text_selector"
                android:layout_marginEnd="8dp"/>

            <RadioButton
                android:id="@+id/rbPorProducto"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Por producto"
                android:gravity="center"
                android:background="@drawable/radio_selector_background"
                android:button="@null"
                android:textColor="@color/radio_text_selector"
                android:layout_marginStart="8dp"/>
        </RadioGroup>

        <LinearLayout
            android:id="@+id/layoutSelectores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona el ítem específico:"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <Spinner
                android:id="@+id/spinnerCategoriaDetalle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:drawable/btn_dropdown"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spinnerProductoDetalle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:drawable/btn_dropdown"
                android:layout_marginBottom="16dp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutMetricaTiempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Qué métrica de tiempo deseas?"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <Spinner
                android:id="@+id/spinnerMetricaTiempo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:drawable/btn_dropdown"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btnConsultarDetalle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Analizar resultados"
                android:backgroundTint="#488079"
                android:layout_marginBottom="24dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutResultados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TENDENCIA DE VENTAS"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#E0F2F1"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvResultadoTiempo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="Cargando..."
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="#00695C"/>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chartTiempo"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_margin="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COMPARATIVA DE DESEMPEÑO"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/tvTituloGrafica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(contra otros productos)"
                android:textAlignment="center"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chartComparativa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>