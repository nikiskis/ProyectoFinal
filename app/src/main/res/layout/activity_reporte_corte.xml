<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESUMEN DE CORTE"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvFondoInicial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fondo Inicial: $0.00"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginVertical="8dp"/>

                <TextView
                    android:id="@+id/tvTotalEfectivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ventas Efectivo: $0.00"
                    android:textSize="18sp"
                    android:textColor="#2E7D32"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvTotalCaja"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TOTAL EN CAJA: $0.00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/tvTotalTarjeta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ventas Tarjeta: $0.00"
                    android:textSize="18sp"
                    android:textColor="#1565C0"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginVertical="8dp"/>

                <TextView
                    android:id="@+id/tvGranTotalVentas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total (Efectivo + Tarjeta): $0.00"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/tvTotalPropinas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Propinas del Periodo: $0.00"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:layout_marginTop="4dp"
                    android:textColor="#F57F17"/>

                <TextView
                    android:id="@+id/tvCostoProduccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Costos de ProducciÃ³n: $0.00"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"
                    android:textColor="#D32F2F"/>

                <TextView
                    android:id="@+id/tvGanancia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ganancias: $0.00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textColor="#388E3C"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descuentos Aplicados"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDescuentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#FFF3E0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuentas Canceladas"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCancelados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="#FFEBEE"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchDesglose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver desglose completo de pedidos"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTodosLosPedidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnImprimirCorte"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Imprimir Corte"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            app:iconGravity="textStart"/>

        <Button
            android:id="@+id/btnCerrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar Reporte"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>